# AuzGuard Environment Configuration Template
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control!

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# Master Database (Tenant Registry)
# This stores information about all tenants/companies
MASTER_DATABASE_URL="postgresql://postgres:your_password@localhost:5432/auzguard_master"

# Legacy/Default Database URL (still used by some services)
DATABASE_URL="postgresql://postgres:your_password@localhost:5432/auzguard_master"

# ==============================================
# JWT & AUTHENTICATION
# ==============================================

# Generate secure secret: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_ISSUER="auzguard"
JWT_AUDIENCE="auzguard-api"

# ==============================================
# SECURITY
# ==============================================

# Hash salt for audit logs - Generate: openssl rand -base64 32
HASH_SALT="your-hash-salt-change-in-production"

# API key encryption key - Generate: openssl rand -base64 32
API_KEY_ENCRYPTION_KEY="your-32-character-encryption-key-here"

# Enable write-once-read-many mode for audit logs
WORM_MODE=true

# ==============================================
# SERVER CONFIGURATION
# ==============================================

# Server port (backend API)
PORT=3001

# Server host
HOST=0.0.0.0

# Environment mode
NODE_ENV=development

# Frontend URL (for email links and CORS)
FRONTEND_URL="http://localhost:3000"

# ==============================================
# BRANDING
# ==============================================

# Default application branding (override in tenant branding settings)
BRAND_NAME="AuzGuard"
BRAND_LOGO_URL=""
BRAND_POWERED_BY="powered by AuzGuard"

# Example: Custom branding for specific clients
BRAND_CBA_LOGO_URL=""

# ==============================================
# EMAIL CONFIGURATION
# ==============================================

# Email provider: 'console' (log only), 'sendgrid', or 'ses'
EMAIL_PROVIDER=console

# Sender email address
EMAIL_FROM="noreply@auzguard.com"
EMAIL_FROM_NAME="AuzGuard"

# SendGrid API Key (if using sendgrid)
SENDGRID_API_KEY=""

# AWS SES Configuration (if using ses)
AWS_REGION=""
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""

# ==============================================
# MODEL GARDEN / AI PROVIDERS
# ==============================================

# Use stub responses for AI models (true = no real API calls)
MODEL_GARDEN_STUB_RESPONSES=true

# OpenAI API Key
OPENAI_API_KEY=""

# Google Gemini API Key
GEMINI_API_KEY=""

# Ollama local server URL
OLLAMA_BASE_URL="http://localhost:11434"

# Default model pool ID to use
DEFAULT_MODEL_POOL=""

# ==============================================
# RATE LIMITING
# ==============================================

# Rate limit window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# AUDIT CONFIGURATION
# ==============================================

# Number of audit logs to process in a batch
AUDIT_BATCH_SIZE=1000

# Merkle tree height for audit proof generation
MERKLE_TREE_HEIGHT=20
