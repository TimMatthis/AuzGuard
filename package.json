{
    "name": "auzguard",
    "version": "1.0.0",
    "description": "Sovereign AI Gateway for Regulated Industries",
    "main": "dist/server.js",
    "scripts": {
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:backend": "nodemon --exec ts-node src/server.ts",
        "dev:frontend": "npm run dev --prefix frontend",
        "build": "npm run build:backend && npm run build:frontend",
        "build:backend": "tsc",
        "build:frontend": "npm run build --prefix frontend",
        "start": "node dist/server.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "db:migrate": "prisma migrate dev",
        "db:migrate:deploy": "prisma migrate deploy",
        "db:generate": "prisma generate",
        "db:seed": "ts-node scripts/seed-users.ts",
        "db:reset": "prisma migrate reset && npm run db:seed"
    },
    "dependencies": {
        "@fastify/cors": "^8.4.0",
        "@fastify/jwt": "8.0.1",
        "@fastify/multipart": "^8.0.0",
        "@fastify/static": "^6.10.2",
        "@google/generative-ai": "^0.6.0",
        "@prisma/client": "^5.7.1",
        "@types/pg": "^8.15.6",
        "ajv": "^8.12.0",
        "bcryptjs": "^2.4.3",
        "crypto": "^1.0.1",
        "dotenv": "^16.4.5",
        "email-validator": "^2.0.4",
        "fastify": "^4.24.3",
        "openai": "^4.10.0",
        "pg": "^8.16.3",
        "undici": "^6.19.8",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/jest": "^29.5.8",
        "@types/node": "^20.9.0",
        "@types/react": "^18.2.37",
        "@types/react-dom": "^18.2.15",
        "@vitejs/plugin-react": "^4.1.1",
        "concurrently": "^8.2.2",
        "jest": "^29.7.0",
        "nodemon": "^3.0.1",
        "prisma": "^5.7.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.18.0",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2",
        "vite": "^6.4.1"
    },
    "keywords": [
        "ai",
        "gateway",
        "compliance",
        "sovereignty",
        "audit"
    ],
    "author": "AuzGuard Team",
    "license": "MIT"
}
