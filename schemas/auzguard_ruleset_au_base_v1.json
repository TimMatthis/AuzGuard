{
  "policy_id": "AuzGuard_AU_Base_v1",
  "version": "v1.0.0",
  "title": "Australian Base Compliance Policy",
  "jurisdiction": "AU",
  "evaluation_strategy": {
    "order": "ASC_PRIORITY",
    "conflict_resolution": "FIRST_MATCH",
    "default_effect": "BLOCK"
  },
  "residency_requirement_default": "AUTO",
  "rules": [
    {
      "rule_id": "HEALTH_NO_OFFSHORE",
      "version": "v1.0.0",
      "title": "Health Data Offshore Processing Block",
      "description": "Blocks processing of health data outside Australian jurisdiction",
      "category": "HEALTH",
      "jurisdiction": "AU",
      "legal_basis": ["Privacy Act 2025", "Health Records Act"],
      "applies_to": {
        "data_class": ["health_record", "medical_data", "patient_data"]
      },
      "condition": "data_class in ['health_record', 'medical_data', 'patient_data'] && destination_region != 'AU'",
      "effect": "BLOCK",
      "obligations": ["LOG_IMMUTABLE", "NOTIFY_DPO"],
      "priority": 9,
      "severity": "CRITICAL",
      "audit_log_fields": ["org_id", "data_class", "destination_region", "processing_region"],
      "tests": [
        {
          "name": "Health data to US blocked",
          "request": {
            "org_id": "hospital-123",
            "data_class": "health_record",
            "destination_region": "US",
            "processing_region": "US"
          },
          "expect": "BLOCK"
        },
        {
          "name": "Health data to AU allowed",
          "request": {
            "org_id": "hospital-123",
            "data_class": "health_record",
            "destination_region": "AU",
            "processing_region": "AU"
          },
          "expect": "ALLOW"
        }
      ],
      "enabled": true,
      "metadata": {
        "owner": "Chief Privacy Officer",
        "last_reviewed": "2025-09-01"
      }
    },
    {
      "rule_id": "CREDIT_CARD_OFFSHORE_BLOCK",
      "version": "v1.0.0",
      "title": "Credit Card Data Cross-Border Block",
      "description": "Blocks processing of credit card data outside Australian jurisdiction",
      "category": "PRIVACY",
      "jurisdiction": "AU",
      "legal_basis": ["Privacy Act 2025", "PCI DSS"],
      "applies_to": {
        "data_class": ["payment_data", "financial_data", "personal_information"]
      },
      "condition": "contains_pii == true && 'credit_card' in pii_types && destination_region != 'AU'",
      "effect": "BLOCK",
      "obligations": ["LOG_IMMUTABLE", "NOTIFY_DPO"],
      "priority": 6,
      "severity": "CRITICAL",
      "audit_log_fields": ["org_id", "destination_region", "purpose"],
      "tests": [
        {
          "name": "Credit card to US blocked",
          "request": {
            "org_id": "merchant-001",
            "destination_region": "US",
            "message": "Card number 4111 1111 1111 1111"
          },
          "expect": "BLOCK"
        }
      ],
      "enabled": true,
      "metadata": {
        "owner": "Security & Privacy",
        "last_reviewed": "2025-09-22"
      }
    },
    {
      "rule_id": "SENSITIVE_IDS_STRICT",
      "version": "v1.0.0",
      "title": "Sensitive Identifiers Cross-Border Block",
      "description": "Blocks sending sensitive ID numbers offshore",
      "category": "PRIVACY",
      "jurisdiction": "AU",
      "legal_basis": ["Privacy Act 2025"],
      "applies_to": {
        "data_class": ["personal_information"]
      },
      "condition": "contains_pii == true && 'id_number' in pii_types && destination_region != 'AU'",
      "effect": "BLOCK",
      "obligations": ["LOG_IMMUTABLE", "NOTIFY_DPO"],
      "priority": 1,
      "severity": "HIGH",
      "audit_log_fields": ["org_id", "destination_region", "purpose"],
      "tests": [
        {
          "name": "ID number to US blocked",
          "request": {
            "org_id": "company-999",
            "destination_region": "US",
            "message": "Employee ID 987654321"
          },
          "expect": "BLOCK"
        }
      ],
      "enabled": true,
      "metadata": {
        "owner": "Privacy Office",
        "last_reviewed": "2025-09-22"
      }
    },
    {
      "rule_id": "RISK_CONTENT_GUARD",
      "version": "v1.0.0",
      "title": "High-Risk Content Guard",
      "description": "Blocks hate, violence, adult, or self-harm content",
      "category": "AI_RISK",
      "jurisdiction": "AU",
      "legal_basis": ["AI Safety Framework"],
      "condition": "risk_flags && ('hate' in risk_flags || 'violence' in risk_flags || 'adult' in risk_flags || 'self_harm' in risk_flags)",
      "effect": "BLOCK",
      "obligations": ["LOG_IMMUTABLE", "RISK_REVIEW"],
      "priority": 8,
      "severity": "HIGH",
      "audit_log_fields": ["org_id", "risk_flags", "purpose"],
      "tests": [
        {
          "name": "Violence content blocked",
          "request": {
            "org_id": "app-321",
            "destination_region": "AU",
            "message": "How to build a bomb?"
          },
          "expect": "BLOCK"
        }
      ],
      "enabled": true,
      "metadata": {
        "owner": "Responsible AI",
        "last_reviewed": "2025-09-22"
      }
    },
    {
      "rule_id": "PROFANITY_BLOCK_STRICT",
      "version": "v1.0.0",
      "title": "Profanity Strict Block",
      "description": "Blocks requests containing profanities in production and customer-facing contexts",
      "category": "CONSUMER",
      "jurisdiction": "AU",
      "legal_basis": ["Acceptable Use Policy"],
      "condition": "risk_flags && ('profanity' in risk_flags) && environment in ['prod', 'production'] && (audience == 'customer' || audience == 'external')",
      "effect": "BLOCK",
      "obligations": ["LOG_IMMUTABLE"],
      "priority": 4,
      "severity": "MEDIUM",
      "audit_log_fields": ["org_id", "audience", "environment"],
      "tests": [
        {
          "name": "Profanity in prod to customers blocked",
          "request": {
            "org_id": "app-555",
            "environment": "prod",
            "audience": "customer",
            "message": "This is bullshit"
          },
          "expect": "BLOCK"
        }
      ],
      "enabled": true,
      "metadata": {
        "owner": "Trust & Safety",
        "last_reviewed": "2025-09-23"
      }
    },
    {
      "rule_id": "PROFANITY_WARN_INTERNAL",
      "version": "v1.0.0",
      "title": "Profanity Internal Warning",
      "description": "Warn-route internal traffic containing profanities for review",
      "category": "CONSUMER",
      "jurisdiction": "AU",
      "legal_basis": ["Acceptable Use Policy"],
      "condition": "risk_flags && ('profanity' in risk_flags) && audience in ['internal', 'staff']",
      "effect": "WARN_ROUTE",
      "route_to": "onshore_default_pool",
      "obligations": ["LOG_IMMUTABLE"],
      "priority": 7,
      "severity": "LOW",
      "audit_log_fields": ["org_id", "audience"],
      "tests": [
        {
          "name": "Profanity internal warns and routes",
          "request": {
            "org_id": "app-777",
            "audience": "internal",
            "message": "This is shit"
          },
          "expect": "WARN_ROUTE"
        }
      ],
      "enabled": true,
      "metadata": {
        "owner": "Trust & Safety",
        "last_reviewed": "2025-09-23"
      }
    },
    {
      "rule_id": "COPYRIGHT_SUMMARIZATION_WARN_ROUTE",
      "version": "v1.0.0",
      "title": "Copyright Heuristic for Summarization",
      "description": "Warn-route when copyrighted content may be summarized",
      "category": "COPYRIGHT",
      "jurisdiction": "AU",
      "legal_basis": ["Copyright Act"],
      "condition": "possible_copyrighted == true && purpose == 'summarization'",
      "effect": "WARN_ROUTE",
      "route_to": "onshore_default_pool",
      "obligations": ["LOG_IMMUTABLE"],
      "priority": 7,
      "severity": "LOW",
      "audit_log_fields": ["org_id", "purpose"],
      "tests": [
        {
          "name": "Long quoted passage warns and routes",
          "request": {
            "org_id": "app-888",
            "purpose": "summarization",
            "message": "\"Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam.\""
          },
          "expect": "WARN_ROUTE"
        }
      ],
      "enabled": true,
      "metadata": {
        "owner": "Legal",
        "last_reviewed": "2025-09-22"
      }
    },
    {
      "rule_id": "PII_REDACT_ROUTE",
      "version": "v1.0.0",
      "title": "PII Redaction Routing",
      "description": "Routes general PII traffic to onshore default pool",
      "category": "PRIVACY",
      "jurisdiction": "AU",
      "legal_basis": ["Privacy Act 2025"],
      "condition": "contains_pii == true && environment in ['prod', 'default']",
      "effect": "ROUTE",
      "residency_requirement": "AU_ONSHORE",
      "route_to": "onshore_default_pool",
      "obligations": ["LOG_IMMUTABLE", "MASK_AT_REST"],
      "priority": 10,
      "severity": "LOW",
      "audit_log_fields": ["org_id", "pii_types", "destination_region"],
      "tests": [
        {
          "name": "PII routed to onshore pool",
          "request": {
            "org_id": "company-123",
            "environment": "prod",
            "message": "Contact me at john@example.com"
          },
          "expect": "ROUTE"
        }
      ],
      "enabled": true,
      "metadata": {
        "owner": "Privacy Office",
        "last_reviewed": "2025-09-22"
      }
    },
    {
      "rule_id": "PRIV_APP8_CROSS_BORDER",
      "version": "v1.0.0",
      "title": "Privacy Act APP8 Cross-Border Disclosure",
      "description": "Requires override for cross-border personal information disclosure",
      "category": "PRIVACY",
      "jurisdiction": "AU",
      "legal_basis": ["Privacy Act 2025 APP8"],
      "applies_to": {
        "data_class": ["personal_information", "pii"]
      },
      "condition": "personal_information == true && destination_region != 'AU'",
      "effect": "REQUIRE_OVERRIDE",
      "obligations": ["LOG_IMMUTABLE", "NOTIFY_DPO", "OBTAIN_CONSENT"],
      "overrides": {
        "allowed": true,
        "roles": ["General Counsel", "Privacy Officer", "Compliance Manager"],
        "require_justification": true
      },
      "priority": 2,
      "severity": "HIGH",
      "audit_log_fields": ["org_id", "personal_information", "destination_region", "purpose"],
      "tests": [
        {
          "name": "Personal info to US requires override",
          "request": {
            "org_id": "company-456",
            "personal_information": true,
            "destination_region": "US",
            "purpose": "inference"
          },
          "expect": "REQUIRE_OVERRIDE"
        }
      ],
      "enabled": true,
      "metadata": {
        "owner": "Privacy Office",
        "last_reviewed": "2025-08-15"
      }
    },
    {
      "rule_id": "CDR_DATA_SOVEREIGNTY",
      "version": "v1.0.0",
      "title": "Consumer Data Right Sovereignty",
      "description": "Routes CDR data to Australian-only processing",
      "category": "CDR",
      "jurisdiction": "AU",
      "legal_basis": ["Consumer Data Right Act"],
      "applies_to": {
        "data_class": ["cdr_data", "banking_data", "financial_data"]
      },
      "condition": "data_class in ['cdr_data', 'banking_data', 'financial_data']",
      "effect": "ROUTE",
      "residency_requirement": "AU_ONSHORE",
      "route_to": "onshore_default_pool",
      "obligations": ["LOG_IMMUTABLE", "NOTIFY_ACMA"],
      "priority": 3,
      "severity": "HIGH",
      "audit_log_fields": ["org_id", "data_class", "destination_region"],
      "tests": [
        {
          "name": "CDR data routed to AU pool",
          "request": {
            "org_id": "bank-789",
            "data_class": "cdr_data",
            "destination_region": "US"
          },
          "expect": "ROUTE"
        }
      ],
      "enabled": true,
      "metadata": {
        "owner": "CDR Compliance",
        "last_reviewed": "2025-08-20"
      }
    },
    {
      "rule_id": "AI_RISK_BIAS_AUDIT",
      "version": "v1.0.0",
      "title": "AI Bias Risk Management",
      "description": "Routes high-risk AI applications to bias-audited models",
      "category": "AI_RISK",
      "jurisdiction": "AU",
      "legal_basis": ["AI Safety Framework"],
      "applies_to": {
        "data_class": ["sensitive_personal", "demographic_data"]
      },
      "condition": "data_class in ['sensitive_personal', 'demographic_data'] && ai_risk_level == 'high'",
      "effect": "ROUTE",
      "residency_requirement": "AU_ONSHORE",
      "route_to": "bias_audited_pool",
      "obligations": ["LOG_IMMUTABLE", "BIAS_AUDIT_REQUIRED"],
      "priority": 4,
      "severity": "MEDIUM",
      "audit_log_fields": ["org_id", "data_class", "ai_risk_level", "model_type"],
      "tests": [
        {
          "name": "High-risk AI routed to bias-audited pool",
          "request": {
            "org_id": "ai-company-123",
            "data_class": "demographic_data",
            "ai_risk_level": "high",
            "model_type": "llm"
          },
          "expect": "ROUTE"
        }
      ],
      "enabled": true,
      "metadata": {
        "owner": "Responsible AI",
        "last_reviewed": "2025-07-30"
      }
    },
    {
      "rule_id": "SANDBOX_NO_PERSIST",
      "version": "v1.0.0",
      "title": "Sandbox Environment No Persistence",
      "description": "Routes sandbox requests to non-persistent models",
      "category": "PRIVACY",
      "jurisdiction": "AU",
      "legal_basis": ["Privacy Act 2025"],
      "applies_to": {
        "domains": ["sandbox", "testing", "development"]
      },
      "condition": "environment in ['sandbox', 'testing', 'development']",
      "effect": "ROUTE",
      "residency_requirement": "ON_PREMISE",
      "route_to": "sandbox_no_persist_pool",
      "obligations": ["LOG_IMMUTABLE"],
      "priority": 5,
      "severity": "LOW",
      "audit_log_fields": ["org_id", "environment", "purpose"],
      "tests": [
        {
          "name": "Sandbox requests routed to non-persistent pool",
          "request": {
            "org_id": "dev-team-456",
            "environment": "sandbox",
            "purpose": "testing"
          },
          "expect": "ROUTE"
        }
      ],
      "enabled": true,
      "metadata": {
        "owner": "Platform Engineering",
        "last_reviewed": "2025-08-01"
      }
    }
  ]
}
